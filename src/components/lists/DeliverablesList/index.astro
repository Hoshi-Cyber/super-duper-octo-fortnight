---
import "./DeliverablesList.css";

export type DeliverableItem = { label: string; icon?: string };

interface Props {
  title?: string;
  eyebrow?: string;
  items: DeliverableItem[];
}

const {
  title = "What you receive",
  eyebrow,
  items = [],
}: Props = Astro.props;
---

<section class="delivs" aria-labelledby="delivs-title" data-section="deliverables">
  <header class="delivs__header">
    {eyebrow && <p class="delivs__eyebrow">{eyebrow}</p>}
    <h2 id="delivs-title" class="delivs__title">{title}</h2>
  </header>

  <ul class="delivs__list" role="list">
    {items.map((it) => (
      <li class="delivs__item" role="listitem">
        <span class="delivs__icon" aria-hidden="true">
          {it.icon
            ? <img src={it.icon} alt="" width="16" height="16" loading="lazy" />
            : (
              // inline check icon (uses currentColor)
              <svg viewBox="0 0 16 16" width="16" height="16" aria-hidden="true">
                <path fill="currentColor" d="M6.6 10.8 3.8 8l1.1-1.1 1.7 1.7L11 3.9l1.1 1.1z"/>
              </svg>
            )}
        </span>
        <span class="delivs__label">{it.label}</span>
      </li>
    ))}
  </ul>
</section>
