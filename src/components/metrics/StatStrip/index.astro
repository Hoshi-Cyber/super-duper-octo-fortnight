---
export interface Stat {
  value: string | number;
  label: string;
}

const { stats = [], eyebrow = 'By the numbers', compact = false } = Astro.props as {
  stats?: Stat[];
  eyebrow?: string;
  compact?: boolean;
};

/* Bundle CSS (fixes vertical stack) */
import "./StatStrip.css";
---

<section class={`statstrip${compact ? ' statstrip--compact' : ''}`} aria-label="Key metrics" data-section="statstrip">
  <div class="container statstrip__inner">
    <header class="statstrip__head">
      <p class="statstrip__eyebrow">{eyebrow}</p>
    </header>

    {stats.length > 0 && (
      <ul class="statstrip__list" role="list">
        {stats.map(({ value, label }) => (
          <li class="statstrip__item">
            <div class="statstrip__value" aria-label={`${value} ${label}`}>{value}</div>
            <div class="statstrip__label">{label}</div>
          </li>
        ))}
      </ul>
    )}
  </div>
</section>

<style is:global>
  @import "../../../styles/tokens.css";
  @import "../../../styles/typography.css";
  @import "../../../styles/utilities.css";
  @import "../../../styles/breakpoints.css";
</style>
